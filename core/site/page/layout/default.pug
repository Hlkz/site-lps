doctype html
html
  head
    script(src='/data/lib/head.load.min.js', data-headjs-load='/data/build/js/main.min.js')
    title !{title}
  body
    #loading-screen
    #full-screen(style='display:none')
      .header
        .lang-opt-spacer
        img.header-logo.loadpage(src='/data/img/header.jpg', page-path='/')
        .lang-opt
          // !=t.getSwapLangLink()

      ul.nav
        each menulink in menulinks
          !=t.getPageLink(menulink)
        if (admin)
          !=t.getPageLink('admin')

      - var loadPage = (content ? 'false' : 'true')
      #page(current=current, loadPage=loadPage)
        - if (content)
          !=content
      #page-hidden(style='display:none')

      #footer
        #footer-content.align
          #footer-content-left
            span
              b L’association La Petite Symphonie est membre du groupement d’employeurs
              .img-solstice
            .align-v(style='margin-top:6px')
              b Avec le concours de :
              a(href='http://www.normandie.fr/', target='_blank' style="margin: 0 8px")
                img(src='/data/img/logo/logo_region.jpg', height='74')
              a(href='http://www.seinemaritime.net/', target='_blank', style='margin: 0 8px')
                img(src='/data/img/logo/logo_departement.jpg', height='74')
              //- a(href='http://www.seinemaritime.net/', target='_blank', style='margin-left: 8px')
              img(src='/data/img/logo/spedidam.png', height='74', style='margin-left: 8px')
          #footer-content-right
            form.align-v.newsletterform(method='post', action='/Newsletter', onsubmit='return SubmitForm(this)')
              .align-reset-l
                b Newsletter de La Petite Symphonie
              .align-reset-l
                input.newslettertextinput(type='text', name='newsletter_suscribe', placeholder="Saisir votre e-mail")
                input.newlettersubmit(type='submit', name='newsletter_submit', value="S'inscrire")
          a.facebook(href='https://fr-fr.facebook.com/lapetitesymphonie', target='_blank')
            img(src='/data/img/logo/facebook.png')
      #footbot
        p Copyright © 2016 Hlkz

      - if (admin)
        form(action='Admin', method='post')
          p Connecté en tant qu'administrateur
          button(name='adminDeco', value='y', type='submit') Déconnexion
        a(href='/Admin') Administration

    script(type='application/ld+json', src='/data/json/musicgroup.json')
